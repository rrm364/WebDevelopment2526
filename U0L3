    // --- Shared config factory ---
    function makeConfig(parentId, sceneClass){
      return {
        type: Phaser.AUTO,
        width: 800,
        height: 600,
        backgroundColor: '#ffffff',
        parent: parentId,
        scene: sceneClass
      };
    }

    // --- Create 8 independent blank games ---
    new Phaser.Game(makeConfig('q1', Q1));
    new Phaser.Game(makeConfig('q2', Q2));
    new Phaser.Game(makeConfig('q3', Q3));
    new Phaser.Game(makeConfig('q4', Q4));
    new Phaser.Game(makeConfig('q5', Q5));
